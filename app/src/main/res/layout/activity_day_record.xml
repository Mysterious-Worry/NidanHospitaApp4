<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayRecordActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#100E0E">

        <ImageButton
            android:id="@+id/refresh_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_baseline_refresh_24"
            android:background="@drawable/btn_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_weight="0"/>

        <ImageButton
            android:id="@+id/select_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_baseline_select_all_24"
            android:background="@drawable/btn_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_weight="0"/>

        <EditText
            android:id="@+id/selected_date_txt"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:ems="10"
            android:fontFamily="@font/ubuntu"
            android:hint="Date"
            android:inputType="textPersonName"
            android:paddingHorizontal="15sp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1000"
            android:layout_height="48dp"
            android:enabled="false"
            android:background="@color/white2"/>

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_baseline_search_24"
            android:background="@drawable/btn_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_weight="0"/>

        <ImageButton
            android:id="@+id/search_by_month_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_baseline_table_rows_24"
            android:background="@drawable/btn_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_weight="0"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:layout_weight="100"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#100E0E">

        <ImageButton
            android:id="@+id/select_date_1_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_baseline_select_all_24"
            android:background="@drawable/btn_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/selected_date_1_txt"
            android:layout_width="150dp"
            android:textColor="#000000"
            android:ems="10"
            android:fontFamily="@font/ubuntu"
            android:hint="Date 1"
            android:inputType="textPersonName"
            android:paddingHorizontal="15sp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="48dp"
            android:enabled="false"
            android:background="@color/white2"/>

        <ImageButton
            android:id="@+id/select_date_2_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_baseline_select_all_24"
            android:background="@drawable/btn_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/selected_date_2_txt"
            android:layout_width="150dp"
            android:textColor="#000000"
            android:ems="10"
            android:fontFamily="@font/ubuntu"
            android:hint="Date 2"
            android:inputType="textPersonName"
            android:paddingHorizontal="15sp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="48dp"
            android:enabled="false"
            android:background="@color/white2"/>

        <ImageButton
            android:id="@+id/search_between_2_dates_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_baseline_table_rows_24"
            android:background="@drawable/btn_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_weight="0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#100E0E">

        <ImageButton
            android:id="@+id/get_pdf_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_baseline_picture_as_pdf_24"
            android:background="@drawable/btn_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_margin="10dp"/>

    </LinearLayout>
</LinearLayout>