<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EAEAEA">

    <androidx.cardview.widget.CardView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/edit_btn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/btn_bg"
                    app:srcCompat="@drawable/ic_baseline_edit_24"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/id_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="25dp"/>

                <TextView
                    android:id="@+id/sr_no_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="25dp"/>

                <EditText
                    android:id="@+id/name_txt"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:elevation="10dp"
                    android:ems="10"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="10dp"/>

                <EditText
                    android:id="@+id/age_txt"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:elevation="10dp"
                    android:ems="10"
                    android:fontFamily="@font/ubuntu"
                    android:hint="--Y--M--D"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/color_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="--"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/type_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="10dp"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="25dp"/>

                    <CheckBox
                        android:id="@+id/normal_cb"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Normal"
                        android:textSize="18dp"/>

                    <CheckBox
                        android:id="@+id/paper_valid_db"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Paper Valid"
                        android:textSize="18dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/discount_cb"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Discount"
                            android:layout_weight="1"
                            android:textSize="18dp"/>

                        <EditText
                            android:id="@+id/percent_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu"
                            android:hint="%"
                            android:inputType="textPersonName"
                            android:paddingHorizontal="10dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/add_amount_cb"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Add Amount"
                            android:layout_weight="1"
                            android:textSize="18dp"/>

                        <EditText
                            android:id="@+id/amount_edt_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu"
                            android:hint="Amount"
                            android:inputType="textPersonName"
                            android:paddingHorizontal="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/amount_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="10dp"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="25dp"/>

                    <CheckBox
                        android:id="@+id/emergency_cb"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Emergency"
                        android:textSize="18dp"/>

                    <CheckBox
                        android:id="@+id/paper_valid_emergency_cb"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Paper Valid Emergency"
                        android:textSize="18dp"/>

                    <CheckBox
                        android:id="@+id/cancel_cb"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Cancel"
                        android:textSize="18dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/check_btn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/btn_bg"
                            android:layout_marginHorizontal="10dp"
                            app:srcCompat="@drawable/ic_baseline_check_24" />

                        <ImageButton
                            android:id="@+id/delete_btn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/btn_bg"
                            android:layout_marginHorizontal="10dp"
                            app:srcCompat="@drawable/ic_baseline_delete_forever_24" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>